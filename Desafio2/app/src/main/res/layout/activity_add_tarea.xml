<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTareaActivity">

    <EditText
        android:id="@+id/txtTitulo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Título (obligatorio)"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/txtDescripcion"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Descripción (opcional)"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etFecha"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Selecciona fecha"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/chkEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Tarea completada?"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/etFecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar tarea"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/chkEstado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>